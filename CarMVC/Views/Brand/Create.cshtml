@using Data.Entities;
@using CarMVC.ExtensionMethods;
@model CarMVC.Models.BrandVM;
@{ User loggedUser = this.ViewContext.HttpContext.Session.GetObject<User>("loggedUser"); }
@{ ViewData["Title"] = "Създай"; }

<h1 class="text-center">Добави нова марка</h1>
<br />
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Име на марката:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <p class="d-none">
                    <label asp-for="CreatedBy" class="control-label">Линк към изображение:</label>
                    <input asp-for="CreatedBy" class="form-control" value="@loggedUser.Id" />
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    <label asp-for="UpdatedBy" class="control-label">Линк към изображение:</label>
                    <input asp-for="UpdatedBy" class="form-control" value="@loggedUser.Id" />
                    <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-right">
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
