 @model CarMVC.Models.UserVM;

@{ ViewData["Title"] = "Моят профил"; }

<h1 class="text-center">Моят профил</h1>

<div>
    <h4 class="text-center">Моят профил</h4>
    <hr />
    <dl class="row text-center">
        <dt class="col-sm-2 text-center">
            Потребителско име:
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2 text-center">
            Имейл:
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-center">
            Име:
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2 text-center">
            Фамилия:
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2 text-center">
            Телефон:
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2 text-center">
            Град:
        <dd class="col-sm-10">
            @Model.TownName(Model.Town_id)
        </dd>
            <dt class="col-sm-2">
                Създаден на:
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDateTime(@Model.CreatedOn)
            </dd>
            <dt class="col-sm-2">
                Последна промяна:
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDateTime(@Model.UpdatedOn)
            </dd>

        </dl>
    </div>
    <div class="justify-content-center">
        @Html.ActionLink("Промени", "Edit", new { id = TempData["id"] }) |
        <a asp-action="Index" asp-controller="Home">Назад</a>
    </div>
